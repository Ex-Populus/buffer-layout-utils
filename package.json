{
    "name": "@solana/buffer-layout-utils",
    "version": "0.1.0",
    "author": "Solana Maintainers <maintainers@solana.foundation>",
    "repository": "https://github.com/solana-labs/buffer-layout-utils",
    "license": "Apache-2.0",
    "engines": {
        "node": ">= 10"
    },
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "lib/"
    ],
    "type": "module",
    "sideEffects": false,
    "main": "lib/index.js",
    "esnext": "lib/index.js",
    "scripts": {
        "clean": "shx rm -rf lib",
        "build": "yarn clean && tsc",
        "watch": "yarn build -w",
        "test": "node --experimental-specifier-resolution=node --loader ts-node/esm test/index.ts",
        "docs": "shx rm -rf docs && typedoc && shx cp .nojekyll docs/",
        "fmt": "prettier --write '{*,**/*}.{js,ts,jsx,tsx,json}'",
        "lint": "eslint --ext .ts . && prettier --check '{*,**/*}.{js,ts,jsx,tsx,json}'",
        "lint:fix": "eslint --fix --ext .ts . && yarn fmt",
        "nuke": "shx rm -rf node_modules yarn.lock",
        "pages": "yarn docs && gh-pages --dist docs --dotfiles",
        "prepare": "yarn build"
    },
    "peerDependencies": {
        "@solana/buffer-layout": "^4.0.0",
        "@solana/web3.js": "~1.20.0"
    },
    "dependencies": {
        "bigint-buffer": "^1.1.5",
        "bignumber.js": "^9.0.1"
    },
    "devDependencies": {
        "@solana/buffer-layout": "^4.0.0",
        "@solana/web3.js": "~1.20.0",
        "@types/eslint": "^8.2.1",
        "@types/eslint-plugin-prettier": "^3.1.0",
        "@types/node": "^16.11.13",
        "@types/prettier": "^2.4.2",
        "@typescript-eslint/eslint-plugin": "^5.7.0",
        "@typescript-eslint/parser": "^5.7.0",
        "eslint": "^8.4.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "gh-pages": "^3.2.3",
        "prettier": "^2.5.1",
        "shx": "^0.3.3",
        "ts-node": "^10.4.0",
        "tslib": "^2.3.1",
        "typedoc": "^0.22.10",
        "typescript": "^4.4.4"
    }
}
